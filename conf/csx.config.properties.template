##
## All custom properties can be set from this file,
## so you don't have to mess with XML context files.
##
## csx.config.properties.template should be copied
## to csx.config.properties before applying
## customizations.
##
################################
##
##  CiteSeerX core DB
##

jdbc.csx.driverClassName=com.mysql.jdbc.Driver
jdbc.csx.url=jdbc:mysql://localhost/citeseerx?useUnicode=true&characterEncoding=UTF-8&autoReconnect=true&jdbcCompliantTruncation=false
jdbc.csx.username=
jdbc.csx.password=

##
################################
##
##  Citation Graph DB
##

jdbc.citegraph.driverClassName=com.mysql.jdbc.Driver
jdbc.citegraph.url=jdbc:mysql://localhost/csx_citegraph?useUnicode=true&characterEncoding=UTF-8&jdbcCompliantTruncation=false
jdbc.citegraph.username=
jdbc.citegraph.password=

##
################################
##
##  MyCiteSeer DB
##

jdbc.mcs.driverClassName=com.mysql.jdbc.Driver
jdbc.mcs.url=jdbc:mysql://localhost/myciteseerx?useUnicode=true&characterEncoding=UTF-8&jdbcCompliantTruncation=false
jdbc.mcs.username=
jdbc.mcs.password=

##
################################
##
##  CiteSeerX External Metadata database
##
